
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Giris</title>
    @Styles.Render("~/Content/css")
    <style>
        input{
            max-width:100%;
        }
    </style>
</head>
<body>
    <div class="col-md-offset-3 col-md-6">
        <form method="post" class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-md-3">Kullanıcı Adı : </label>
                <div class="col-md-9">
                    <input type="text" name="KullaniciAdi"  class="form-control" />
                </div>
            </div>
            <div class=" form-group">
                <label class="control-label col-md-3">Şifre :</label>
                <div class="col-md-9">
                    <input type="password" name="Sifre" class="form-control" />
                </div>

            </div>
            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <input type="submit" value="Giriş" class="btn btn-primary" style="float:right;" />
                </div>
            </div>

        </form>

    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
